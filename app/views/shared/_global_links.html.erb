<% if logged_in? %>
 	<strong><%= current_user.login %></strong> | 
	<%= link_to t("global_links.dashboard"), root_url %> | 
	<%= link_to t("global_links.my_account"), profile_url(current_user) %> | 
	<% if admin? -%><%= link_to t("global_links.admin"), admin_root_url %> | <% end -%>
	<%= link_to t("global_links.log_out"), logout_url, :method => :delete %>
<% else %>
	<%= link_to t("global_links.log_in"), login_url %>
	<%= link_to t("global_links.register"), signup_url %> | 
<% end %>