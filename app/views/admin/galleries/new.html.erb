<% content_for :header do -%>
	Criar um Galleria de imagens para <%= configatron.site_name %>
<% end -%>

<% content_for :sidebar do -%>
	<%= render :partial => 'help' %>
<% end -%>

<%= error_messages_for :gallery %>

<% form_for :gallery, :url => admin_galleries_path, :html => { :multipart => true } do |f| -%>
	<%= render :partial=> "form", :locals=>{:f=>f}%>
	<p><%= submit_tag 'Criar' %></p>
<% end -%>

<%= link_to 'Voltar', admin_galleries_path %>
