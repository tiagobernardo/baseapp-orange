<% content_for :header do -%>
	Criar um tema para <%= configatron.site_name %>
<% end -%>

<% content_for :sidebar do -%>
	<%= render :partial => 'help' %>
<% end -%>

<%= error_messages_for :theme %>

<% form_for :theme, :url => admin_themes_path, :html => { :multipart => true } do |f| -%>
	<%= render :partial=> "form", :locals=>{:f=>f}%>
 
	<span class="roundbutton"><input type="image" src="<%= t('button.create')%>" name="image" width="144" height="47"/></span> <span class="goback"><%= link_to t('go_back'), admin_themes_path %></span>
<% end -%>
 
