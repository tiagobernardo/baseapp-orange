<% content_for :header do -%>
	Criar uma imagem da galeria <%= @gallery.name %> 
<% end -%>

<% content_for :sidebar do -%>
	<%= render :partial => 'help' %>
<% end -%>

<%= error_messages_for :image %>

<% form_for @image, :url => admin_gallery_images_path(@gallery), :html => { :multipart => true } do |f| -%>
	<%= render :partial=> "form", :locals=>{:f=>f}%>
	<span class="roundbutton"><input type="image" src="<%= t('button.create')%>" name="image" width="144" height="47"/></span> <span class="goback"><%= link_to t('go_back'), admin_gallery_images_path(@gallery) %></span>
	<div class="clear"></div>
<% end -%> 
