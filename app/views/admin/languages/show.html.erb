<% content_for :header do -%>
	Ver idioma para <%= configatron.site_name %>
<% end -%>

<% content_for :sidebar do -%>
	<%= render :partial => 'help' %>
<% end -%>

<table class="overview">
	<%= cell "ID", h(@language.id) %>
	<%= cell_separator %>

	<%= cell "Nome", h(@language.name) %>
 	<%= cell "Descrição", h(@language.description) %>

	<%= cell_separator %>
	
	<%= cell "Data de criação", data_pt(@user.created_at ) %>
	<%= cell "Última actualização", data_pt(@user.updated_at ) %>

</table>

<%= link_to 'Edit', edit_admin_language_path(@language) %> | <%= link_to 'Voltar ', admin_languages_path %>

