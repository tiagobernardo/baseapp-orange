<table class="overview">
	<%= cell "ID", h(@language.id) %>
	<%= cell_separator %>

	<%= cell "Nome", h(@language.name) %>
	<%= cell "Permalink", h(@language.permalink) %>
	<%= cell "Descrição", h(@language.description) %>

	<%= cell_separator %>
	
	<%= cell "Data Criação", @language.created_at.to_s(:long) %>
	<%= cell "Última actualização", @language.updated_at.to_s(:long) %>
</table>

<%= link_to 'Edit', edit_admin_language_path(@language) %> | <%= link_to 'Voltar ', admin_languages_path %>

