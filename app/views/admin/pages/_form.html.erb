
<%= javascript_include_tag :fckeditor %>
<p><label for="name">Nome</label><br/>
<%= f.text_field :name %></p>

<p><label for="body">Corpo da página</label><br/>
<%= fckeditor_textarea(:page, :body, :toolbarSet => 'Simple', :width => '100%', :height => '300px') %>
</p>

<p><label for="parent_id">Pai</label><br/>
<%= f.select :parent_id, nested_set_options(Page, @page) {|i| "#{'-' * i.level} #{i.name}" }, :prompt => 'Escolhe uma opção' %></p>

<p><label for="language_id">Língua</label><br/>
<%= f.collection_select :language_id , Language.find(:all), :id, :name, :prompt => 'Escolhe uma opção' %></p>

<%= render :partial=> "/admin/shared/seo_fields", :locals=>{:f=>f}%>
