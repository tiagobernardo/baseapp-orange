<% content_for :header do -%>
Create a new <%= configatron.site_name %> account
<% end -%>

<% content_for :sidebar do -%>

<p>
	<strong>This account will not be activated by default!</strong>
</p>	

<p>
	The user will receive an email with activation instructions. If you want
	to activate the account, you can do this manually later.
</p>
<% end -%>

<%= error_messages_for :user %>

<% form_for :user, :url => admin_users_path do |f| -%>
<p><label for="login">Login</label><br/>
<%= f.text_field :login %></p>

<p><label for="email">Email</label><br/>
<%= f.text_field :email %></p>

<p><label for="password">Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Confirm Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<span class="roundbutton"><input type="image" src="<%= t('button.create')%>" name="image" width="144" height="47"/></span> <span class="goback"><%= link_to t('go_back'), admin_users_path %></span>
<div class="clear"></div>
<% end -%>
