
<%= javascript_include_tag :fckeditor %>
<p><label for="name">Título</label><br/>
<%= f.text_field :name %></p>

<p><label for="body">Corpo da página</label><br/>
<%= fckeditor_textarea(:news, :body, :toolbarSet => 'Simple', :width => '100%', :height => '300px') %>
</p>

<p><label for="lead">Lead</label><br/>
<%= f.text_area :lead , :size=>"33x3"%></p>
 
<p><label for="language">Idioma</label><br/>
<%= f.select :language , LANGUAGES, :prompt => 'Escolhe uma opção' %></p>

<p><label for="language_id">Estado</label><br/>
<%= f.select :state , STATES, :prompt => 'Escolhe uma opção' %></p>

<%= render :partial=> "/admin/shared/seo_fields", :locals=>{:f=>f}%>


